# NPM Configuration for ZK-Vault
# Use legacy peer dependency resolution to handle conflicting peer dependencies
legacy-peer-deps=true

# Ensure exact versions are installed
save-exact=true

# Disable audit automatically running (can be run manually with npm audit)
audit=false

# Set registry (default but explicit)
registry=https://registry.npmjs.org/

# Engine strict to enforce Node.js version requirements
engine-strict=true 