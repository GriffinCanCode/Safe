{
  "name": "@zk-vault/shared",
  "version": "0.1.0",
  "description": "Shared utilities and types for ZK-Vault system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "dev:debug": "npm run dev -- --verbose",
    "dev:https": "npm run dev",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "build:profile": "webpack --mode production --profile --json > webpack-stats.json",
    "test:debug": "npm run test -- --no-coverage --verbose",
    "test:ui": "npm run test -- --watch",
    "quality:complexity": "npx ts-complex --threshold 10 src/",
    "quality:deps": "npx depcheck && npm audit",
    "quality:bundle": "npm run build:analyze",
    "quality:all": "npm run lint && npm run type-check && npm run test && npm run quality:complexity",
    "perf:lighthouse": "echo \"Lighthouse not available for this package\"",
    "perf:bundle": "npm run build:analyze",
    "deps:update": "npx npm-check-updates -u && npm install",
    "deps:audit": "npm audit fix",
    "clean:full": "npm run clean && rm -rf node_modules package-lock.json && npm install"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/zk-vault.git",
    "directory": "packages/shared"
  },
  "keywords": [
    "zero-knowledge",
    "types",
    "utilities",
    "shared"
  ],
  "author": "ZK-Vault Team",
  "license": "MIT"
}