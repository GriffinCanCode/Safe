{
  "name": "@zk-vault/crypto",
  "version": "0.1.0-mock",
  "description": "Zero-knowledge cryptographic library for ZK-Vault system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "benchmark": "node dist/benchmarks/performance.js",
    "install-crypto": "node install-crypto-deps.js",
    "install-crypto-deps": "node install-crypto-deps.js --install",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint src/ --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "dev:debug": "npm run dev -- --verbose",
    "dev:https": "npm run dev",
    "build:analyze": "cross-env ANALYZE=true npm run build",
    "build:profile": "webpack --mode production --profile --json > webpack-stats.json",
    "test:debug": "npm run test -- --no-coverage --verbose",
    "test:ui": "npm run test -- --watch",
    "quality:complexity": "npx ts-complex --threshold 10 src/",
    "quality:deps": "npx depcheck && npm audit",
    "quality:bundle": "npm run build:analyze",
    "quality:all": "npm run lint && npm run type-check && npm run test && npm run quality:complexity",
    "perf:lighthouse": "echo \"Lighthouse not available for this package\"",
    "perf:bundle": "npm run build:analyze",
    "deps:update": "npx npm-check-updates -u && npm install",
    "deps:audit": "npm audit fix",
    "clean:full": "npm run clean && rm -rf node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "@zk-vault/shared": "^0.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "@stablelib/hkdf": "^1.0.1",
    "@stablelib/hmac": "^1.0.1",
    "@stablelib/pbkdf2": "^1.0.1",
    "@stablelib/sha256": "^1.0.1",
    "@stablelib/xchacha20poly1305": "^1.0.1",
    "argon2": "^0.31.0",
    "libsodium-wrappers": "^0.7.11",
    "node-forge": "^1.3.1",
    "tweetnacl": "^1.0.3"
  },
  "peerDependencies": {
    "@types/node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/zk-vault.git",
    "directory": "packages/crypto"
  },
  "keywords": [
    "zero-knowledge",
    "cryptography",
    "encryption",
    "argon2",
    "aes-gcm",
    "xchacha20-poly1305",
    "libsodium",
    "post-quantum"
  ],
  "author": "ZK-Vault Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
